<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reader_background">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/Terminate"
        android:layout_below="@+id/play_pause_imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txtDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="290dp"
            android:maxLines="1000"
            android:scrollbars="vertical"
            android:text=""
            android:textSize="15dp" />

    </ScrollView>

    <TextView
        android:id="@+id/StoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="4"
        android:textSize="25dp"
        android:text="" />

    <ImageView
        android:id="@+id/play_pause_imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/StoryTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="visible"
        app:srcCompat="@drawable/play_button" />

    <Button
        android:id="@+id/Terminate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@android:color/holo_red_dark"
        android:text="END STORY SESSION" />


</RelativeLayout>
